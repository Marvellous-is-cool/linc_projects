<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Select Branches</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include('header') %>
    <div class="container animate__animated animate__fadeIn">
      <h1 class="title">Select Branches of <span><%= interest %></span></h1>

      <form
        action="/generate"
        method="post"
        class="form animate__animated animate__fadeInUp"
      >
        <input type="hidden" name="name" value="<%= name %>" />
        <input type="hidden" name="interest" value="<%= interest %>" />

        <div class="checkbox-group">
          <% branches.forEach(branch => { %>
          <label class="checkbox-label">
            <input type="checkbox" name="branches" value="<%= branch %>" />
            <span class="checkbox-text"><%= branch %></span>
          </label>
          <% }) %>
        </div>

        <div class="button-group">
          <button
            type="submit"
            name="action"
            value="generate"
            class="btn-submit"
          >
            Generate <i class="fas fa-cogs"></i>
          </button>
          <button type="button" id="generate-random" class="btn-random">
            Generate Random <i class="fas fa-random"></i>
          </button>
        </div>
      </form>
    </div>

    <%- include('footer') %>

    <style>
      body {
        font-family: "Roboto", sans-serif;
        background: linear-gradient(135deg, #1c1c1c, #343434);
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .container {
        text-align: center;
        width: 100%;
        max-width: 450px;
        padding: 20px;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
      }

      .title {
        font-size: 2rem;
        margin-bottom: 20px;
        line-height: 1.2;
      }

      .title span {
        color: #00d9ff;
      }

      .form {
        display: flex;
        flex-direction: column;
        align-items: stretch;
      }

      .checkbox-group {
        text-align: left;
        margin-bottom: 20px;
      }

      .checkbox-label {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        font-size: 1.1rem;
      }

      .checkbox-label input[type="checkbox"] {
        margin-right: 10px;
        accent-color: #00d9ff;
        cursor: pointer;
      }

      .checkbox-text {
        color: #ccc;
        font-weight: 500;
      }

      .button-group {
        display: flex;
        justify-content: space-between;
      }

      .btn-submit,
      .btn-random {
        display: inline-block;
        background-color: #00d9ff;
        color: #1c1c1c;
        padding: 10px 20px;
        font-size: 1rem;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      }

      .btn-submit:hover,
      .btn-random:hover {
        background-color: #00b3e3;
      }

      .btn-submit i,
      .btn-random i {
        margin-left: 10px;
      }
    </style>

    <script>
      document
        .getElementById("generate-random")
        .addEventListener("click", function () {
          const form = document.querySelector("form");
          form.action = "/generate-random";
          form.method = "post";
          form.submit();
        });
    </script>
  </body>
</html>
